<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
                   android:orientation="vertical"
                   android:layout_height="match_parent"
                   android:layout_width="match_parent"
                   android:layout_marginRight="@dimen/perfiles_perfiles_photoGallery_marg_2"
                   android:background="@android:color/white"
        >

              <ImageView
                      android:id="@+id/user_photo"
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:scaleType="centerCrop"
                      android:layout_margin="@dimen/perfiles_perfiles_photoGallery_marg"
                      android:layout_gravity="center_horizontal"
                      android:layout_weight="6"/>
             <TextView
                    android:id="@+id/user_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/perfiles_photoGallery_number"
                    android:textColor="@android:color/black"
                    android:layout_gravity="bottom|center_vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.1"/>

              <TextView
                      android:id="@+id/user_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/perfiles_photoGallery_name"
                      android:textColor="@android:color/black"
                      android:textStyle="bold"
                      android:layout_gravity="bottom|center_vertical"
                      android:gravity="center_horizontal"
                      android:layout_marginBottom="@dimen/perfiles_perfiles_photoGallery_marg_bottom"
                      android:layout_weight="0.1"/>

    </LinearLayout>
