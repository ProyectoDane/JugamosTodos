<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="dane.asdra"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="12"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front"/>

    <application android:label="@string/app_name" android:icon="@drawable/icono" android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <activity android:name="dane.asdra.SplashActivity"
                android:screenOrientation="landscape"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="dane.asdra.HomeActivity"
                  android:screenOrientation="landscape">
        </activity>
        <activity
                android:name="dane.asdra.GameOneActivity"
                android:screenOrientation="landscape"
                android:windowSoftInputMode="adjustPan"
                />

        <activity
                android:name="dane.asdra.PerfilesActivity"
                android:screenOrientation="landscape"
                android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="dane.asdra.VideoInfoActivity"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan"/>
    </application>
</manifest>
